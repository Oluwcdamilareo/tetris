<div class="product">
      <% if user_signed_in?%>
          <%= form_for @order_item, remote: true do |f| %>
              <%= link_to (image_tag product.image.store.url, id:"store_image"), product%>
              <%=product.name%>
              <h4>Price:<%= number_to_currency(product.price,unit: "N")%></h4>
          <% end %>
        <%else%>
          <div class="card">
            <div class="front" style='background-image: url(<%= product.image.store.url%>)'>
              <%= render 'product_front', product: product%>
           </div>
            <div class="back">
              <%= render 'product_back', product: product%>
            </div>
          </div>
          <p><%=product.name%><p>
      <%end%>
</div>
