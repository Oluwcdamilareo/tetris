
<div id="new_product_form">
  <%= form_for @product, url: {action: "create"} do |f|  %>

    <ul>
      <li><%= f.text_field :name, placeholder: "Name" %></li>
      <li><%= f.number_field :price, placeholder: "Price"%></li>
      <li><%= f.check_box :active%></li>
      <li><%= f.submit "Done" %></li>
    </ul>
  <%end%>
</div>
