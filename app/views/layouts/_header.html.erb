<header>
  <div id="header" class="cf">

    <%= link_to image_tag('#', alt:"tetris", id: "header_logo"), root_path %>

    <div class="nav cf">
      <ul>
        <% if user_signed_in?%>
          <li class="drop_down">
            <%=current_user.first_name[0..3] + "." +current_user.last_name[0].upcase%>

            <ul class="sub-menu">
              <li><%=link_to "Account", account_path%></li>
              <li><%= render 'layouts/cart_text'%></li>
              <li><%=link_to "Sign out", destroy_user_session_path,:method => :delete%></li>

            </ul>
          </li>
          <li><%=link_to "customer care", customercare_path%></li>
          <li><%=link_to "store", store_path%></li>
          <li><%=link_to "home", root_path%></li>
        <%elsif admin_signed_in?%>
            <li class="drop_down">
              <%=current_admin.email%>

              <ul class="sub-menu">
                <li><%=link_to "Account", dashboard_path%></li>
                <li><%=link_to "Sign out", destroy_user_session_path,:method => :delete%></li>

              </ul>
            </li>
        <%else%>
          <li><%=link_to "sign in/sign up", new_user_session_path %></li>
          <li><%=link_to "customer care", customercare_path%></li>
          <li><%=link_to "store", store_path%></li>
          <li><%=link_to "home", root_path%></li>
        <%end%>
      </ul>
    </div>
  </div>
</header>
